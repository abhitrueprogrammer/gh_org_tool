# MySQL configuration
SPRING_DATASOURCE_URL=jdbc:mysql://db:3306/springboot_demo?useSSL=false&allowPublicKeyRetrieval=true&serverTimezone=UTC
SPRING_DATASOURCE_USERNAME=appuser
SPRING_DATASOURCE_PASSWORD=
SPRING_DATASOURCE_DRIVER_CLASS_NAME=com.mysql.cj.jdbc.Driver

# Redis configuration
SPRING_REDIS_HOST=redis
SPRING_REDIS_PORT=6379

# Optional: Spring profiles and server port
SPRING_PROFILES_ACTIVE=prod
SERVER_PORT=8080

# Optional: Hibernate and JPA properties for production readiness
SPRING_JPA_HIBERNATE_DDL_AUTO=update
SPRING_JPA_SHOW_SQL=false
SPRING_JPA_PROPERTIES_HIBERNATE_FORMAT_SQL=true